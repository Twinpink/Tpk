from random import randrange

point = 0
max_points = 21
command = ""

while point <= max_points:
    command = input("Do you want Card? ")
    if command == "yes":
        point += randrange(2, 10)
        print(point)
    elif command == "no":
        print(f"your points was:{point}")
        break
    elif command == "help":
        print('''
yes - to pick a "card"
no - to end program
            ''')
    if point > max_points:
        print('You lose!!!')
        break
